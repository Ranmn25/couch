<div class='show-card'>
  <h1>Dr. <%=@therapist.first_name %> <%= @therapist.last_name %></h1>
  <img src='#' alt='Therapist image'>
  <h3><%= @therapist.area_of_expertise %></h3>

  <div class='show-info'>
    <h3>Little about me</h3>
    <p><%= @therapist.description %></p>
  </div>
</div>

<div class='show-links'>
  <p><%= link_to "Book new session",  new_therapist_session_path(@therapist) %></p>
  <p><%= link_to "Message",  new_therapist_message_path(@therapist) %></p>
  <p><%= link_to "Back", therapists_path %></p>
</div>

